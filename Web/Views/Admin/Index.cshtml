@using  Web.Models
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Admin-Page";
}
<h2>@ViewData["Title"]</h2>
<div class="container">
        <h2>Select the product to Update/Delete it.</h2>
<div class="container-fluid">
    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3">
                    <div class="card">
                        <center>
                            <a href="/Admin/EditDelete/@product.Id">
                                @if (product.ProductImage != null)
                                {
                                    <img class="card-img-top img-fluid" src="@product.ProductImage?w=170&h=170" alt="@product.Name" />
                                }
                                else
                                {
                                    <img class="card-img-top img-fluid" src="~/images/system/no-image.png" alt="@product.Name" />
                                }
                            </a>
                        </center>
                        <div class="card-block">
                            <a href="/Admin/EditDelete/@product.Id" class="card-title text-muted" title="@product.Name">@product.Name</a>
                            <div class="card-text">
                                 @product.Price.ToString("C2")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="col-md-12">
            <h5>No product on database</h5>
        </div>
    }
            <table>
                    <tr>
                        <td colspan="5">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                        </td>
                    </tr>
                    </table>
</div>

</div>